[Unit]
Description=Apache Tomcat 8
After=syslog.target network.target

[Service]
User=tomcat
Group=tomcat
Type=forking
Environment=CATALINA_PID=/opt/tomcat/8.5.46/tomcat.pid
Environment=CATALINA_HOME=/opt/tomcat/8.5.46
Environment=CATALINA_BASE=/opt/tomcat/8.5.46
ExecStart=/opt/tomcat/8.5.46/bin/startup.sh
ExecStop=/opt/tomcat/bin/shutdown.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target
